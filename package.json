{
  "name": "alexa-typescript-starter",
  "version": "1.0.0",
  "description": "Alexa TS starter",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && gulp",
    "deploy": "npm run build && ask deploy",
    "deploy:lambda": "npm run build && ask deploy --target lambda",
    "deploy:local": "ask deploy --target skill --profile local",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "nodemon"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "coverageDirectory": ".coverage",
    "coveragePathIgnorePatterns": [
      "/__tests__/*",
      "lambda/locales/"
    ]
  },
  "author": "Mihail Cristian Dumitru",
  "contributors": [
    "Guilherme Caixeta"
  ],
  "license": "MIT",
  "dependencies": {
    "ask-sdk-core": "^2.12.1",
    "ask-sdk-model": "^1.38.2",
    "i18next": "^21.8.9",
    "i18next-fs-backend": "^1.1.4",
    "lodash": "^4.17.21",
    "prisma-client-lib": "^1.34.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/i18next-fs-backend": "^1.1.2",
    "@types/jest": "^28.1.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.41",
    "event-stream": "^4.0.1",
    "express": "^4.18.1",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-typescript": "^5.0.1",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
